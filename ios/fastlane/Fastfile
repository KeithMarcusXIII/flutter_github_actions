# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)



platform :ios do
  desc "Import Apple UDIDs"
  lane :import_udids do
    root = Dir.pwd
    file = "#{root}/tester-udids.txt"

    firebase_app_distribution_get_udids(
        app: ENV["APP_ID"],
        firebase_cli_token: ENV["FIREBASE_TOKEN"],
        output_file: file,
    )

    if File.file?(file)
      puts "file exists"
      register_devices(
        devices_file: file
      )
    end
  end

  desc "Fastlane deploy ios"
  lane :distribute_firebase do |options|
    puts options
    ENV["APP_ID"]

    begin
      firebase_app_distribution(
        app: ENV["APP_ID"],
        service_credentials_file: options[:credentials_file],
        ipa_path: options[:artifact_path]
      )
    rescue ClientError, ConnectionFailed, ParsingError, RetriableResponse, SSLError, ServerError => e
      puts "Rescued: #{e.inspect}"
      raise
    end

    # increment_build_number(build_number: options[:build_number])
end
end

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Import Apple UDIDs"
  lane :import_udids do
    root = Dir.pwd
    file = "#{root}/tester-udids.txt"

    firebase_app_distribution_get_udids(
        app: ENV["APP_ID"],
        firebase_cli_token: ENV["FIREBASE_TOKEN"],
        output_file: file,
    )

    sh "cat #{file}"

    if File.file?(file)
      puts "file exists"
      register_devices(
        # devices_file: file,
        team_id: "43TQ7X4TZK",
        devices: {
          "kmarcusxiii@gmail.com - iPhone XS" => "00008020-000338293442002e"
        }
      )
    end
  end
end
